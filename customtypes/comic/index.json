{
  "format": "page",
  "id": "comic",
  "label": "Comic",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "title": {
        "type": "StructuredText",
        "config": {
          "single": "heading1,heading2,heading3,heading4,heading5,heading6",
          "label": "Title",
          "placeholder": "Comic Number/Title"
        }
      },
      "uid": {
        "type": "UID",
        "config": {
          "label": "Unique Identifier",
          "placeholder": "Used for URL (blind-alley.com/UID)"
        }
      },
      "publish_date": {
        "type": "Date",
        "config": {
          "label": "Publish Date",
          "placeholder": "Date of Original Release"
        }
      },
      "desktop": {
        "type": "Image",
        "config": {
          "constraint": {},
          "thumbnails": [],
          "label": "Desktop Size (Default)"
        }
      },
      "mobile": {
        "type": "Image",
        "config": {
          "constraint": {},
          "thumbnails": [],
          "label": "Mobile Size"
        }
      },
      "thumbnail": {
        "type": "Image",
        "config": {
          "constraint": {},
          "thumbnails": [],
          "label": "Thumbnail"
        }
      },
      "blog_post": {
        "type": "StructuredText",
        "config": {
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl",
          "allowTargetBlank": true,
          "label": "Blog Post",
          "placeholder": "Only enter text in here if you want to post a blog-type post instead of just a comic strip"
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}